<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Patterns.StatsSelectionController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
            <SplitPane dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
               <items>
                  <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label text="Выберите статистические величины">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <FlowPane.margin>
                              <Insets bottom="10.0" />
                           </FlowPane.margin>
                        </Label>
                        <CheckBox fx:id="min" mnemonicParsing="false" text="Минимум">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="max" mnemonicParsing="false" text="Максимум">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="mean" mnemonicParsing="false" text="Среднее">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="sum" mnemonicParsing="false" text="Сумма">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="standard_deviation" mnemonicParsing="false" text="Стандартное отклонение">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="variance" mnemonicParsing="false" text="Дисперсия">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="skewness" mnemonicParsing="false" text="Коэф. ассиметрии">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="median" mnemonicParsing="false" text="Медиана">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="kurtosis" mnemonicParsing="false" text="Коэф. эксцесса">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                     </children>
                     <opaqueInsets>
                        <Insets bottom="10.0" top="10.0" />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </FlowPane>
                  <FlowPane fx:id="columns" alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label text="Выберите нужные колонки таблицы">
                           <FlowPane.margin>
                              <Insets bottom="10.0" />
                           </FlowPane.margin>
                        </Label>
                     </children>
                  </FlowPane>
               </items>
            </SplitPane>
      <Button mnemonicParsing="false" text="Генерировать статистику" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
   </children>
</GridPane>
